{% extends 'base.html.twig' %}

{% block title %}Nos biens{% endblock %}

{% block body %}
    <h1 class="detail-title">Nos biens</h1>
    <iframe src="https://www.google.com/maps/d/embed?mid=1vZl3ulyu-nvNt-N_7Dt1-iQ3eqMylb-7" width="100%" height="480"></iframe>    <main class="container">
    <div class="row">
        {% for property in properties %}
            <div class="card" style="width: 18rem;">
                <img src="{{ property.principalImage }}" height="200" class="card-img-top" alt="photo-maison">
                <div class="card-body">
                <h5 class="card-title">{{ property.title }}</h5>
            <p class="card-text">Prix : {{ property.price }}€</p>
            <a href="{{ path('property_show', {'id': property.id}) }}" class="btn btn-danger">Détails</a>
            </div>
            </div>
    {% endfor %}
    </div>
        <div class="white-div"></div>
    </main>
{% endblock %}