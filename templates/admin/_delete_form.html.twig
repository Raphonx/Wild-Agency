<form method="post" action="{{ path('admin_delete', {'id': property.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer ce bien?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
    <button class="mt-2 btn btn-danger">Supprimer</button>
</form>
